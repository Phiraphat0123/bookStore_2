<UserControl x:Class="BookStoreApp.Controller.NavigationBTN"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStoreApp.Controller"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Button  HorizontalAlignment="Center" VerticalAlignment="Center" Padding="15" Click="ActionButton" BorderBrush="{x:Null}" Background="#FFE5989B" Cursor="Hand" >
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image x:Name="iconBTN" Grid.Column="0" Source="{Binding SrcImg}" Width="30" IsEnabled="False" />
            <TextBlock x:Name="txtBTN" Text="{Binding TxtContent}" Grid.Column="1"  Margin="10,0,0,0" VerticalAlignment="Center" MinWidth="100"  />
        </Grid>
    </Button>
</UserControl>
